{{ form_start(form, {'attr': {'class': 'app-form'}}) }}
<div class="app-grid two mb-3">
    <fieldset class="form-fieldset">
        <legend class="form-legend">Son compte BSS</legend>

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {% if artist is defined %}
                {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
                <p class="help">{{ form.password.vars.help }}</p>
            {% else %}
                {{ form_label(form.password, 'Son mot de passe', {'label_attr': {'class': 'form-label required'}}) }}
                {{ form_widget(form.password, {'required': 'required'}) }}
            {% endif %}
            {{ form_errors(form.password) }}
        </div>

        <div class="app-grid third">
            <div class="form-group mb-0">
                {{ form_label(form.status) }}
                {{ form_widget(form.status) }}
                {{ form_errors(form.status) }}
            </div>

            <div class="form-group toggle mb-0">
                <label for="{{ form.active.vars.id }}"
                       class="toggle-label {% if form.active.vars.required %}required{% endif %}">
                    {{ form.active.vars.label }}
                </label>
                {{ form_widget(form.active) }}
                <div class="toggle-switch"></div>
            </div>
        </div>
    </fieldset>

    <fieldset class="form-fieldset">
        <legend class="form-legend">Ses réseaux</legend>

        <div class="form-group">
            {{ form_label(form.website) }}
            {{ form_widget(form.website) }}
            {{ form_errors(form.website) }}
        </div>
    </fieldset>
</div>

<div class="app-grid two mb-3">
    <fieldset class="form-fieldset">
        <legend class="form-legend">Ses informations</legend>

        <div class="app-grid third mb-1">
            <div class="form-group mb-0">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group mb-0">
                {{ form_label(form.bandmates) }}
                {{ form_widget(form.bandmates) }}
                {{ form_errors(form.bandmates) }}
            </div>
        </div>

        <div class="app-grid two mb-1">
            <div class="form-group mb-0">
                {{ form_label(form.genre) }}
                {{ form_widget(form.genre) }}
                {{ form_errors(form.genre) }}
            </div>

            <div class="form-group mb-0">
                {{ form_label(form.style) }}
                {{ form_widget(form.style) }}
                {{ form_errors(form.style) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="app-grid three">
            <div class="form-group mb-0">
                {{ form_label(form.logo) }}
                {{ form_widget(form.logo) }}
                {{ form_errors(form.logo) }}
                {% if artist is defined and artist.logo %}
                    <p class="help">
                        <a href="{{ asset('uploads/artist/' ~ artist.slug ~ '/' ~ artist.logo) }}"
                           class="text-secondary"
                           target="_blank">
                            {{ artist.logo }}
                        </a>
                    </p>
                {% endif %}
            </div>

            <div class="form-group mb-0">
                {{ form_label(form.photoBand) }}
                {{ form_widget(form.photoBand) }}
                {{ form_errors(form.photoBand) }}
                {% if artist is defined and artist.photoBand %}
                    <p class="help">
                        <a href="{{ asset('uploads/artist/' ~ artist.slug ~ '/' ~ artist.photoBand) }}"
                           class="text-secondary"
                           target="_blank">
                            {{ artist.photoBand }}
                        </a>
                    </p>
                {% endif %}
            </div>

            <div class="form-group mb-0">
                {{ form_label(form.photoLive) }}
                {{ form_widget(form.photoLive) }}
                {{ form_errors(form.photoLive) }}
                {% if artist is defined and artist.photoLive %}
                    <p class="help">
                        <a href="{{ asset('uploads/artist/' ~ artist.slug ~ '/' ~ artist.photoLive) }}"
                           class="text-secondary"
                           target="_blank">
                            {{ artist.photoLive }}
                        </a>
                    </p>
                {% endif %}
            </div>
        </div>
    </fieldset>

    <fieldset class="form-fieldset">
        <legend class="form-legend">Ses coordonnées</legend>

        <div class="form-group">
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone) }}
            {{ form_errors(form.phone) }}
        </div>

        <div class="form-group">
            {{ form_label(form.address) }}
            {{ form_widget(form.address) }}
            {{ form_errors(form.address) }}
        </div>

        <div class="form-group">
            {{ form_label(form.address2) }}
            {{ form_widget(form.address2) }}
            {{ form_errors(form.address2) }}
        </div>

        <div class="form-group">
            {{ form_label(form.address3) }}
            {{ form_widget(form.address3) }}
            {{ form_errors(form.address3) }}
        </div>

        <div class="app-grid third reverse mb-1">
            <div class="form-group mb-0">
                {{ form_label(form.zipcode) }}
                {{ form_widget(form.zipcode) }}
                {{ form_errors(form.zipcode) }}
            </div>

            <div class="form-group mb-0">
                {{ form_label(form.city) }}
                {{ form_widget(form.city) }}
                {{ form_errors(form.city) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.country) }}
            {{ form_widget(form.country) }}
            {{ form_errors(form.country) }}
        </div>
    </fieldset>
</div>

{{ form_widget(form._token) }}

<fieldset class="form-fieldset controls">
    <a href="{{ path('app_back_office_artist_home') }}" class="app-button outline">
        {{ ux_icon('ph:skip-back-fill', {'class': 'app-icon'}) }}
        Retour
    </a>
    <button type="submit" class="form-submit app-button cta">Enregistre&nbsp;!</button>
</fieldset>
{{ form_end(form, {'render_rest': false}) }}
