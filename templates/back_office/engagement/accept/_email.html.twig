{% apply inline_css %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

        body {
            font-family: "Cormorant Garamond", serif;
            font-size: 16px;
            color: #222222;
            background-color: #ffffff;
        }

        h1 {
            font-family: "Roboto", sans-serif;
            font-size: 1.75rem;
            font-weight: bold;
            line-height: 2rem;
            text-transform: uppercase;
            color: #650f3c;
        }
    </style>

    <main>
        <h1>{{ mailData['subject'] }}, {{ mailData['to']['name'] }} !</h1>

        <p>
            On a une super nouvelle : {{ mailData['engagement'].artist.name }} vient jouer chez
            toi
            {{ mailData['engagement'].startAt | format_datetime(locale=app_locale, pattern="EEEE dd MMMM YYYY") | title }}
            !
        </p>

        {% if mailData['from']['phone'] %}
            <p>
                Tu peux rappeler {{ mailData['from']['name'] }} au {{ mailData['from']['phone'] | format_phone }} en cas
                de besoin.
            </p>
        {% endif %}
    </main>
{% endapply %}
