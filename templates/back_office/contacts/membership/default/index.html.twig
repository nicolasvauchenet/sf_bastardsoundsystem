{% extends 'back_office/_layout/_index.html.twig' %}

{% block title %}Les adhésions - Administration{% endblock %}

{% block body_class %}back-office{% endblock %}

{% block main %}
    <section class="app-section cover">
        <img src="{{ asset('img/admincover.webp') }}" alt="Administration BSS"/>

        <div class="content">
            <h1>
                {% if app.request.query.get('etat') == 'nouvelle' %}
                    Les demandes d'adhésion
                {% elseif app.request.query.get('etat') == 'attente' %}
                    Les adhésions en attente
                {% else %}
                    Les adhésions archivées
                {% endif %}
            </h1>
            <p>Administration BSS</p>
        </div>
    </section>

    {{ component('FilterMemberships') }}
{% endblock %}
