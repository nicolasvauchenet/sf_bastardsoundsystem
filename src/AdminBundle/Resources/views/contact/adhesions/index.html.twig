{% extends '@Admin/index.html.twig' %}

{% block title %}Demandes d'adhésion - Administration Générale{% endblock %}

{% block main %}
    <section class="app-section pagetitle">
        <h1>Nouvelles demandes d'adhésion</h1>
    </section>

    <section class="app-section">
        {% if app_statistics_contact.adhesions | length > 0 %}
            <table class="app-table">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th colspan="2">Date de la demande</th>
                    </tr>
                </thead>

                <tbody>
                    {% for adhesion in app_statistics_contact.adhesions %}
                        <tr>
                            <td>{{ adhesion.adherentType }}</td>
                            <td>{{ adhesion.adherentName }}</td>
                            <td>{{ adhesion.adherentEmail }}</td>
                            <td>{{ adhesion.adherentPhone }}</td>
                            <td>{{ adhesion.sentAt | date("d/m/Y à H:i") }}</td>
                            <td>
                                <a href="{{ path('admin_contact_adhesions_accept', {'id': adhesion.id}) }}"
                                   class="success"
                                   onclick="return window.confirm('Accepter cette demande ?')"
                                   title="Accepter la demande">
                                    <i class="fa-solid fa-thumbs-up"></i>
                                </a>

                                {% if adhesion.adherentMessage %}
                                    <a href="#"
                                       class="info"
                                       title="Lire le message"
                                       data-controller="popup--index"
                                       data-action="popup--index#open"
                                       data-popupid="popup-{{ adhesion.id }}">
                                        <i class="fa-solid fa-envelope"></i>
                                    </a>
                                    <div id="popup-{{ adhesion.id }}" class="app-popup">
                                        <div class="popup-body">
                                            <div class="popup-header">
                                                <h2>Nouvelle demande d'adhésion</h2>
                                                <a href="#"
                                                   class="close"
                                                   data-controller="popup--index"
                                                   data-action="popup--index#close"
                                                   data-popupid="popup-{{ adhesion.id }}">
                                                    <i class="fa-solid fa-circle-xmark"></i>
                                                </a>
                                            </div>
                                            <div class="popup-content">
                                                <p>
                                                    <strong>{{ adhesion.adherentName }}</strong>
                                                    -
                                                    {{ adhesion.adherentType }}
                                                </p>
                                                <p>
                                                    <strong>Message :</strong>
                                                </p>
                                                <blockquote>{{ adhesion.adherentMessage }}</blockquote>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    <a class="disabled" title="Pas de message">
                                        <i class="fa-solid fa-envelope"></i>
                                    </a>
                                {% endif %}

                                <a href="{{ path('admin_contact_adhesions_reject', {'id': adhesion.id}) }}"
                                   class="danger"
                                   onclick="return window.confirm('Rejeter cette demande ?')"
                                   title="Rejeter la demande">
                                    <i class="fa-solid fa-user-slash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Tout est nickel de ce côté ! Rien à signaler…</p>
        {% endif %}
    </section>

    {% if app_statistics_contact.rejectedAdhesions | length > 0 %}
        <section class="app-section pagetitle">
            <h2>Demandes d'adhésion rejetées</h2>
        </section>

        <section class="app-section alt">
            {% if app_statistics_contact.rejectedAdhesions | length > 0 %}
                <table class="app-table">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th colspan="2">Date de la demande</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for adhesion in app_statistics_contact.rejectedAdhesions %}
                            <tr>
                                <td>{{ adhesion.adherentType }}</td>
                                <td>{{ adhesion.adherentName }}</td>
                                <td>{{ adhesion.adherentEmail }}</td>
                                <td>{{ adhesion.adherentPhone }}</td>
                                <td>{{ adhesion.sentAt | date("d/m/Y à H:i") }}</td>
                                <td>
                                    <a href="{{ path('admin_contact_adhesions_accept', {'id': adhesion.id}) }}"
                                       class="success"
                                       onclick="return window.confirm('Accepter cette demande ?')"
                                       title="Accepter la demande">
                                        <i class="fa-solid fa-thumbs-up"></i>
                                    </a>

                                    {% if adhesion.adherentMessage %}
                                        <a href="#"
                                           class="info"
                                           title="Lire le message"
                                           data-controller="popup--index"
                                           data-action="popup--index#open"
                                           data-popupid="popup-rejected-{{ adhesion.id }}">
                                            <i class="fa-solid fa-envelope"></i>
                                        </a>
                                        <div id="popup-rejected-{{ adhesion.id }}" class="app-popup">
                                            <div class="popup-body">
                                                <div class="popup-header">
                                                    <h2>Demande d'adhésion rejetée</h2>
                                                    <a href="#"
                                                       class="close"
                                                       data-controller="popup--index"
                                                       data-action="popup--index#close"
                                                       data-popupid="popup-rejected-{{ adhesion.id }}">
                                                        <i class="fa-solid fa-circle-xmark"></i>
                                                    </a>
                                                </div>
                                                <div class="popup-content">
                                                    <p>
                                                        <strong>{{ adhesion.adherentName }}</strong>
                                                        -
                                                        {{ adhesion.adherentType }}
                                                    </p>
                                                    <p>
                                                        <strong>Message :</strong>
                                                    </p>
                                                    <blockquote>{{ adhesion.adherentMessage }}</blockquote>
                                                </div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <a class="disabled" title="Pas de message">
                                            <i class="fa-solid fa-envelope"></i>
                                        </a>
                                    {% endif %}

                                    <a href="{{ path('admin_contact_adhesions_delete', {'id': adhesion.id}) }}"
                                       class="danger"
                                       onclick="return window.confirm('Supprimer cette demande ?')"
                                       title="Supprimer la demande">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Tout est nickel de ce côté ! Rien à signaler…</p>
            {% endif %}
        </section>
    {% endif %}
{% endblock %}
