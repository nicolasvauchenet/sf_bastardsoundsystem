{% apply inline_css %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

        body {
            font-family: "Cormorant Garamond", serif;
            font-size: 16px;
            color: #222222;
            background-color: #ffffff;
        }

        h1 {
            font-family: "Roboto", sans-serif;
            font-size: 1.75rem;
            font-weight: bold;
            line-height: 2rem;
            text-transform: uppercase;
            color: #650f3c;
        }

        .danger {
            color: #d9534f;
        }
    </style>

    <main>
        <h1>Merci pour votre cotisation, {{ mailData['to']['name'] }} !</h1>

        <p>
            Nous vous remercions pour le paiement de votre cotisation annuelle&nbsp;!
        </p>

        <blockquote>
            <dl>
                <dt>
                    Vous avez payé une cotisation de {{ mailData['amount'] | number_format('2', ',', ' ') }}€.
                </dt>
                <dt>
                    Votre cotisation a été payée le {{ mailData['paidAt'] | date('d/m/Y à H:i') }}.
                </dt>
                <dt>
                    Votre prochaine cotisation sera redevable le {{ mailData['nextAt'] | date('d/m/Y') }}.
                </dt>
            </dl>
        </blockquote>

        {% if mailData['from']['phone'] %}
            <p>
                En cas de besoin, vous pouvez contacter {{ mailData['from']['name'] }}
                au {{ mailData['from']['phone'] }}.
            </p>
        {% endif %}
        <p>À bientôt !</p>
    </main>
{% endapply %}
